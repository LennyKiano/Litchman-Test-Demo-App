<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/launcherUIRelativeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_gradient"
        android:orientation="vertical"
        android:weightSum="8"
        tools:context=".LauncherActivity">


    <ImageView
            android:layout_width="180dp"
            android:layout_height="0dp" app:srcCompat="@drawable/llogo"
            android:layout_weight="4"
            android:layout_marginTop="120dp"
            android:layout_gravity="center"
            android:id="@+id/launcherImageView"
            android:alpha="0"
    />


    <TextView android:layout_width="wrap_content" android:layout_height="0dp"
              android:layout_weight="3"
              android:layout_gravity="center"
              android:text="@string/launcherTitle"
              android:textSize="24sp"
              android:alpha="0"
              android:id="@+id/tileTextView"
              android:textColor="@android:color/white"
              />

</LinearLayout>


